<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div style="background: #f8d7da; color: #721c24; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
      <h2 style="margin-top: 0; font-size: 18px;"><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>
      <ul style="margin-bottom: 0;">
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :title, "Title *", style: "display: block; font-weight: 500; margin-bottom: 8px; color: #333;" %>
    <%= form.text_field :title, placeholder: "Enter ticket title", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 14px;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :description, "Description", style: "display: block; font-weight: 500; margin-bottom: 8px; color: #333;" %>
    <%= form.textarea :description, placeholder: "Enter ticket description (optional)", rows: 6, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 14px; font-family: monospace;" %>
  </div>

  <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px; margin-bottom: 20px;">
    <div>
      <%= form.label :status, "Status", style: "display: block; font-weight: 500; margin-bottom: 8px; color: #333;" %>
      <%= form.select :status, [["Open", "open"], ["In Progress", "in_progress"], ["Closed", "closed"]], {}, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 14px;" %>
    </div>

    <div>
      <%= form.label :priority, "Priority", style: "display: block; font-weight: 500; margin-bottom: 8px; color: #333;" %>
      <%= form.select :priority, [["Low", "low"], ["Medium", "medium"], ["High", "high"], ["Urgent", "urgent"]], {}, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 14px;" %>
    </div>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :created_by, "Created By (Email)", style: "display: block; font-weight: 500; margin-bottom: 8px; color: #333;" %>
    <%= form.text_field :created_by, placeholder: "your@email.com", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 14px;" %>
  </div>

  <div style="display: flex; gap: 10px;">
    <%= form.submit style: "padding: 10px 25px; background: #007bff; color: white; border: none; border-radius: 4px; font-weight: 500; cursor: pointer; font-size: 14px;" %>
    <%= link_to "Cancel", tickets_path, style: "padding: 10px 25px; background: #6c757d; color: white; text-decoration: none; border-radius: 4px; font-weight: 500; cursor: pointer; font-size: 14px; text-align: center;" %>
  </div>
<% end %>
